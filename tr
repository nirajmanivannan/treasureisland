print("welcome to treasure island. Your mission is to find the treasure")
path1 = input("which way do you wanna go , left or right?")
if path1 == "left":
    decision = input(" swim or wait")
    if decision == "wait":
        door = input("which door? red blue yellow")
        if door == "yellow":
             print("You get the treasure")
        elif door== "red":
            print("gtfo")
        elif door == "blue":
            print("out")
        else:
            print("no such door")
    else:
        print("gtfo")
else:
    print("bye")
